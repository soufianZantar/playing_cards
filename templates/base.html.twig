<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="/css/cards.css" media="screen" />
            <style>
                h2, form { padding-left: 50px}
            </style>
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <div style="min-height: 190px">
                <div class="playingCards fourColours rotateHand">
                    <h2>la main non triée</h2>
                    <ul class="table">
                        {% for card in randomCards %}
                        <li>
                            <div class="card rank-{{ card.number}} {{ card.type}}"><span class="rank">{{ card.number | upper }}</span><span class="suit">&{{ card.type}};</span></div>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <form action="" method="post">
                <input type="submit" name="start" value="Relancer le jeu">
            </form>

            <div class="playingCards fourColours rotateHand">
                <h2>la main triée</h2>
                <ul class="table">
                    {% for card in orderedCards %}
                        <li>
                            <div class="card rank-{{ card.number}} {{ card.type}}"><span class="rank">{{ card.number | upper }}</span><span class="suit">&{{ card.type}};</span></div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        {% endblock %}
    </body>
</html>
